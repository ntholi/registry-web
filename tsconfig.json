{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@academic/*": ["./src/modules/academic/features/*"],
			"@registry/*": ["./src/modules/registry/features/*"],
			"@student-portal/*": ["./src/modules/student-portal/features/*"],
			"@finance/*": ["./src/modules/finance/features/*"],
			"@admin/*": ["./src/modules/admin/features/*"],
			"@classroom/*": ["./src/modules/classroom/features/*"],
			"@timetable/*": ["./src/modules/timetable/features/*"],
			"@auth/*": ["./src/modules/auth/features/*"],
			"@audit-logs/*": ["./src/modules/audit-logs/features/*"],
			"@server/*": ["./src/server/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next\\dev/types/**/*.ts",
		".next\\dev/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules", "migrations"]
}
