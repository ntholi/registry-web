{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"lineWidth": 100
	},
	"linter": {
		"domains": {
			"next": "recommended"
		},
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessTypeConstraint": "off",
				"useArrowFunction": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useConst": "error",
				"useTemplate": "warn"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noArrayIndexKey": "warn",
				"noDoubleEquals": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	}
}
